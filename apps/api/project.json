{
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/api/src/environments/environment.ts",
              "with": "apps/api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "migrate-generate": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx @nestjs/cli build -p tsconfig.app.json && cd ../../ && ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -f ./apps/api/ormconfig.js migration:generate -n migrate",
        "cwd": "apps/api"
      }
    },
    "migrate-run": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "../../node_modules/.bin/ts-node ../../node_modules/.bin/typeorm -f ormconfig.js migration:run",
        "cwd": "apps/api"
      }
    },
    "migrate-revert": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "../../node_modules/.bin/ts-node ../../node_modules/.bin/typeorm -f ormconfig.js migration:revert",
        "cwd": "apps/api"
      }
    }
  },
  "tags": []
}
